{
  "name": "Cloud monitoring service",
  "description": "Cloud monitoring service for home pc monitoring",
  "repository": "https://github.com/saiinc/cloudmon",
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev"
    }
  ],
  "env": {
     "SND_PATH": {
      "description": "Path to send messages.",
      "value": "/send"
    },
      "STATUS_PATH": {
      "description": "Path to view current status.",
      "value": "/status"
    },
      "LOG_PATH": {
      "description": "Path to view log.",
      "value": "/log"
    },
      "TELEGRAM_TOKEN": {
      "description": "Telegram bot token.",
      "value": ""
    },
      "TLG_CHAT_ID": {
      "description": "Telegram chat with bot id.",
      "value": ""
    },
      "PASSPHRASE": {
      "description": "Password for nodes.",
      "value": ""
    }
  }
}
